<%= render :partial => "navbar" %>

<h1>Listing casts</h1>

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Description</th>
    <th>Likes</th>
    <th>Dislikes</th>
    <th>Dreams & Goals</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @casts.each do |cast| %>
  <tr>
    <td><%= image_tag cast.headshot.url(:thumb) %>
    <td><%= cast.name %></td>
    <td><%= cast.description %></td>
    <td><%= cast.likes %>
    <td><%= cast.dislikes %>
    <td><%= cast.dreams %>    
    <td><%= link_to 'Show', cast %></td>
    <td><%= link_to 'Edit', edit_gerbil_cast_path(cast) %></td>
    <td><%= link_to 'Destroy', [:gerbil, cast] , method: :delete, data: { confirm: 'Are you sure?' }%></td>
  </tr>
<% end %>
</table>

