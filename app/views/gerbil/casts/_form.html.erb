<%= form_for @cast, :url => url, :html => { :multipart => true } do |f| %>
  <% if @cast.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cast.errors.count, "error") %> prohibited this cast from being saved:</h2>

      <ul>
      <% @cast.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :likes%><br />
    <%= f.text_area :likes %>
  </div>
  <div class="field">
    <%= f.label :dislikes %><br />
    <%= f.text_area :dislikes %>
  </div>
  <div class="field">
    <%= f.label :dreams %><br />
    <%= f.text_area :dreams %>
  </div>
  <div class="field">
    <% if @cast.headshot? %>
      <%= image_tag @cast.headshot.url(:thumb) %>
    <% end %>
    <%= f.file_field :headshot %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
