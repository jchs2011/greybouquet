<%= render :partial => "gerbil/shared/gerbil_navbar" %>

<h1>Listing comics</h1>

<table>
  <tr>
    <th>Series</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comics.each do |comic| %>
  <tr>
    <td><%= comic.series %></td>
    <td><%= comic.sequence %></td>
    <td><%= image_tag comic.strip.url(:medium) %></td>
    <td><%= link_to 'Show', comic %></td>
    <td><%= link_to 'Edit', edit_gerbil_comic_path(comic) %></td>
    <td><%= link_to 'Destroy', [:gerbil, comic], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comic', new_gerbil_comic_path %>
